<view class="sx_components_login" wx:if="{{showLogin}}">
    <view>
        <view class="top">
            <view class="title">您还未登录</view>
            <view class="tip">请先登录再进行操作</view>
            <view class="icon">!</view>
        </view>
        <view class="btn-cont">
            <button class="cancel" bindtap="cancel">暂不登录</button>
            <button class="confirm" open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo">立即登录</button>
        </view>
    </view>
</view>
